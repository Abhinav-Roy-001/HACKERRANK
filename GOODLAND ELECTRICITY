#include <bits/stdc++.h>
using namespace std;

int pylons(int k, vector<int> arr) {
    int n = arr.size();
    int i = 0, plants = 0;

    while (i < n) {
        int pos = min(n - 1, i + k - 1);  
        while (pos >= i - k + 1 && pos >= 0 && arr[pos] == 0) {
            pos--;  
        }
        if (pos < i - k + 1 || pos < 0) {
            return -1;  
        }
        plants++;
        i = pos + k;  
    }
    return plants;
}

int main() {
    int n, k;
    cin >> n >> k;
    vector<int> arr(n);
    for (int i = 0; i < n; i++) cin >> arr[i];

    cout << pylons(k, arr) << endl;
    return 0;
}
