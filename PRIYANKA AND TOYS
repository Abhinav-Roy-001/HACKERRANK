#include <stdio.h>
#include <stdlib.h>

int compare(const void *a, const void *b) {
    return (*(int *)a - *(int *)b);
}

int toys(int w[], int n) {

    qsort(w, n, sizeof(int), compare);

    int containers = 0;
    int i = 0;

    while (i < n) {
        containers++;
        int limit = w[i] + 4; 
        i++; // Move to next toy

        while (i < n && w[i] <= limit) {
            i++;
        }
    }

    return containers;
}

int main() {
    int n;
    scanf("%d", &n);
    int w[n];

    for (int i = 0; i < n; i++) {
        scanf("%d", &w[i]);
    }

    printf("%d\n", toys(w, n));
    return 0;
}
